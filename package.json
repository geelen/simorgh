  "spec": {
    "executable": [
      "./bake-scripts/*"
    ],
    "post": [
      "mkdir -p /etc/bake-scripts/",
      "cp -R -af /usr/lib/simorgh/bake-scripts/* /etc/bake-scripts"
    ],
    "prune": false,
    "requires": [
      "td-agent",
      "cloudteam-td-agent-setup",
      "dial-agent"
